{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build-debug",
          "type": "shell",
          "command": "${workspaceFolder}/compile.sh",
          "args": [
              "-std=c++23",
              "-g",
              "${workspaceFolder}/main.cpp",
              "${workspaceFolder}/src/*.cpp",
              "-o",
              "${workspaceFolder}/bin/Fitter",
              "-I/usr/include/c++/15",
              "-I/usr/include",
              "-L/usr/lib64",
              "-lstdc++",
              "-lstdc++fs",
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "reveal": "always"
          },
          "problemMatcher": "$gcc"
      }
  ]
}
