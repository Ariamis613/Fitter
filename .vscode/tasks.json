{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build",
          "type": "shell",
          "command": "g++",
          "args": [
              "-std=c++17",
              "-g",
              "${workspaceFolder}/main.cpp",
              "${workspaceFolder}/src/*.cpp",
              "-o",
              "${workspaceFolder}/bin/fitter"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "reveal": "always"
          },
          "problemMatcher": "$gcc"
      }
  ]
}
