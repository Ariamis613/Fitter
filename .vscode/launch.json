{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Fitter",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/Fitter",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "CPATH",
                    "value": "/usr/include/c++/15:/usr/include"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-debug",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
